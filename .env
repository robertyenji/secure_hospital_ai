# ==================================================
# SecureHospital AI - Environment Variables
# ==================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# ==================================================
# DATABASE (Choose one option)
# ==================================================

# Option A: Full DATABASE_URL (Recommended for Supabase/Vercel)
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# Option B: Individual PostgreSQL variables (Azure style)
# PGHOST=your-server.postgres.database.azure.com
# PGUSER=your-username
# PGPORT=5432
# PGDATABASE=your-database
# PGPASSWORD=your-password
# DB_SSLMODE=require
# DB_CONN_MAX_AGE=600

# MCP Server Database (usually same as above)
DATABASE_URL_MCP=postgresql://user:password@host:5432/database?sslmode=require

# ==================================================
# SECURITY
# ==================================================

# Django Secret Key - Generate with:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-django-secret-key-here

# JWT Configuration (uses SECRET_KEY by default)
# JWT_SECRET=optional-separate-jwt-secret
JWT_ALG=HS256

# ==================================================
# DJANGO
# ==================================================

# Use settings_prod for production/Vercel deployment
DJANGO_SETTINGS_MODULE=secure_hospital_ai.settings

# For production:
# DJANGO_SETTINGS_MODULE=secure_hospital_ai.settings_prod

# ==================================================
# LLM CONFIGURATION
# ==================================================

# Provider: openai or anthropic
LLM_PROVIDER=openai
LLM_MODEL=gpt-4-turbo
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# OpenAI API Key
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Alternative names (for compatibility)
# OPENAI_KEY=sk-your-openai-api-key-here
# LLM_API_KEY=sk-your-openai-api-key-here

# ==================================================
# ALTERNATIVE: Anthropic Claude
# ==================================================
# LLM_PROVIDER=anthropic
# LLM_MODEL=claude-3-5-sonnet-20241022
# LLM_API_KEY=your-anthropic-api-key

# ==================================================
# OPTIONAL
# ==================================================

# Custom domain for production
# CUSTOM_DOMAIN=securehospital.yourdomain.com

# Debug mode (set to False in production)
# DEBUG=False
